/* What does the app's SQL look like? */

CREATE TABLE girlfriends (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    job TEXT,
    date TEXT);

INSERT INTO girlfriends (name, job, date) VALUES ("Rena", "Trainer", "Hiking");
